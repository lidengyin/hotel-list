<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.hctech2006.hotellist.mapper.InventoryMapper">
  <resultMap id="BaseResultMap" type="cn.hctech2006.hotellist.bean.Inventory">
    <result column="id" jdbcType="INTEGER" property="id" />
    <result column="name" jdbcType="NVARCHAR" property="name" />
    <result column="quantity" jdbcType="INTEGER" property="quantity" />
  </resultMap>
  <insert id="insert" parameterType="cn.hctech2006.hotellist.bean.Inventory">
    <selectKey keyProperty="id" order="BEFORE" resultType="java.lang.Integer">
      SELECT LAST_INSERT_ID()
    </selectKey>
    insert into inventory (id, name, quantity
      )
    values (#{id,jdbcType=INTEGER}, #{name,jdbcType=NVARCHAR}, #{quantity,jdbcType=INTEGER}
      )
  </insert>
  <select id="selectAll" resultMap="BaseResultMap">
    select id, name, quantity
    from inventory
  </select>
</mapper>